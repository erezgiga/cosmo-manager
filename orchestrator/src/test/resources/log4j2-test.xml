<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF" packages="org.cloudifysource.cosmo.log">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level [%t] %logger{1} - %msg%n"/>
        </Console>
        <!--<Socket name="socket" host="localhost" port="9500">-->
            <!--<SerializedLayout />-->
        <!--</Socket>-->
    </appenders>
    <loggers>
        <root level="debug">
            <appender-ref ref="Console"/>
            <!--<appender-ref ref="socket"/>-->
        </root>
        <logger name="defaultpkg" level="off" />
        <logger name="org.drools.audit.WorkingMemoryConsoleLogger" level="all">
            <CustomFilter
                    content="ACTIVATION CANCELLED,AFTER ACTIVATION FIRED,ACTIVATION CREATED,BEFORE ACTIVATION FIRED,OBJECT ASSERTED" />
        </logger>
        <logger name="org.cloudifysource.cosmo.messaging.mock.MockMessageBroker" level="all">
            <CustomFilter
                    content="agent_status_message,probe_agent_message,state_changed_message,message=org.cloudifysource.cosmo.agent.messages.ProbeAgentMessage,message=StateChangedMessage,message=AgentStatusMessage" />
        </logger>
,        <logger name="org.cloudifysource.cosmo.orchestrator.integration.monitor.MockPortKnocker" level="all">
            <CustomFilter
                content="Received probe message" />
        </logger>
        <logger name="org.cloudifysource.cosmo.monitor.ResourceMonitorServer" level="all">
            <CustomFilter
                    content="Resource monitor received message" />
        </logger>

    </loggers>
</configuration>